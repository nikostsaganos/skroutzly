<% content_for :title, "Short urls" %>

<div class="max-w-6xl mx-auto">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-800">My Short URLs</h1>
    <div>
      <%= link_to "New short url", new_short_url_path, class: "bg-indigo-600 hover:bg-indigo-700 text-white py-2 px-4 rounded text-sm" %>
    </div>
  </div>

  <div id="url_list_container">
    <%= render 'url_list', short_urls: @short_urls, pagy: @pagy %>
  </div>
</div>

