<% content_for :title, "Short urls" %>

<div class="max-w-6xl mx-auto">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-800">My Short URLs</h1>
    <div>
      <button type="button"
              data-controller="toggle"
              data-toggle-element-id-value="new_short_url_form"
              data-action="toggle#toggle"
              class="bg-indigo-600 hover:bg-indigo-700 text-white py-2 px-4 rounded text-sm">
        New Short URL
      </button>
    </div>
  </div>

  <div id="new_short_url_form" class="mb-8 bg-white p-6 rounded-lg shadow-md hidden" data-controller="toggle">
    <h2 class="text-xl font-semibold mb-4">Create a new short URL</h2>
    <%= turbo_frame_tag "new_short_url" do %>
      <%= render "form", short_url: @short_url %>
    <% end %>
  </div>

  <div id="url_list_container">
    <%= render 'url_list', short_urls: @short_urls, pagy: @pagy %>
  </div>
</div>
